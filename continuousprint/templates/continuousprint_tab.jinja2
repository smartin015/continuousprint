<ul class="nav nav-tabs">
  <li class="active"><a href="#continuousprint_tab_queues" data-toggle="tab">Queues</a></li>
  <li><a href="#continuousprint_tab_history" data-toggle="tab">History</a></li>

  <button class="btn btn-secondary pull-right" data-bind="visible: active(), click: function() {setActive(false);}" title="Stop the print queue">
    <i class="fa fa-stop"></i>&nbsp;&nbsp;Stop Managing
  </button>
  <button class="btn btn-primary pull-right" data-bind="hidden: active(), click: function() {setActive(true);}" title="Start the print queue">
    <i class="fa fa-play"></i>&nbsp;&nbsp;Start Managing
  </button>
  <button class="btn pull-right" data-bind="click: newEmptyJob" title="Add a new job"><i style="cursor:pointer" class="fas fa-plus"></i>&nbsp;New Job</button>
</ul>
<div class="tab-content">
  <div id="continuousprint_tab_history" class="tab-pane">
    <div class="header">
      <div>Status</div>
      <div>Duration</div>
      <div>Date</div>
      <div>Time</div>
    </div>
    <div class="entries" data-bind="foreach: history">
      <!-- ko if: $data.divider -->
        <div class="separator">
          <div data-bind="text: queue_name"></div>:
          <div data-bind="text: job_name"></div>
          <div class="line"></div>
          <div data-bind="text: set_path"></div>
        </div>
      <!-- /ko -->
      <!-- ko ifnot: $data.divider -->
        <div class="entry" data-bind="css: {'success': result().startsWith('success')}">
        <div data-bind="text:result"></div>
        <div data-bind="text:duration"></div>
        <div data-bind="text:startedDate"></div>
        <div data-bind="text:startedTime"></div>
        </div>
      <!-- /ko -->
      </div>
  </div>
  <div id="continuousprint_tab_queues" class="tab-pane active" data-bind="foreach: {data: queues, as: 'queue'}">
    <div class="cp-queue">
    <div class="cp-header action-bar">
        <div>
          <span data-bind="visible: $root.queues().length > 1, text: name"></span>
          <span data-bind="text: details, attr: {title: fullDetails}" style="cursor: pointer; display: inline-block"></span>
        </div>
        <div style="display: flex; flex-direction: row; justify-content: right">
        <div class="btn-group">
          <button class="btn" data-bind="visible: checkFraction() > 0, click: deleteSelected" title="Delete selected">
            <i style="cursor: pointer" class="far fa-trash-alt"></i>
          </button>
          <button class="btn" data-bind="visible: checkFraction() > 0 && name === 'local', click: resetSelected" title="Reset selected progress">
            <i style="cursor: pointer" class="fas fa-redo"></i>
            </button>
          <button class="btn" data-bind="visible: checkFraction() > 0 && name === 'local', click: exportSelected" title="Export as .gjob to files list">
            <i style="cursor: pointer" class="fas fa-file-export"></i>
            </button>
        </div>
        <div class="dropdown">
            <a class="btn dropdown-toggle" data-toggle="dropdown" data-bind="visible: checkFraction() > 0 && $root.queues().length > 1" title="Submit selected jobs to another queue">
              <i style="cursor: pointer" class="fas fa-paper-plane"></i>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu" data-bind="foreach: $root.queues">
            <li data-bind="visible: name !== queue.name">
              <a tabindex="-1" data-bind="click: $root.submitJob">Send to <span data-bind="text:name"></span></a>
            </li>
            </ul>
        </div>
        <div class="dropdown">
            <a class="btn dropdown-toggle" data-toggle="dropdown">
              <i style="cursor: pointer" data-bind="click: onChecked, css: (checkFraction() >= 1) ? 'fas fa-check-square' : ((checkFraction() > 0) ? 'fas fa-minus-square' : 'far fa-square')"></i>
              <i style="cursor: pointer" class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
              <li><a tabindex="-1" data-bind="click: batchSelect">All</a></li>
              <li><a tabindex="-1" data-bind="click: batchSelect">None</a></li>
              <li class="divider"></li>
              <li><a tabindex="-1" data-bind="click: batchSelect">Empty Jobs</a></li>
              <li><a tabindex="-1" data-bind="click: batchSelect">Unstarted Jobs</a></li>
              <li><a tabindex="-1" data-bind="click: batchSelect">Incomplete Jobs</a></li>
              <li><a tabindex="-1" data-bind="click: batchSelect">Completed Jobs</a></li>
            </ul>
          </div>
          </div>
      </div>

      <div class="queue-header">
        <div style="flex:1">Job</div>
        <div style="width: 150px">Progress</div>
        <div class="repeats">Count</div>
        <div class="total">Total</div>
      </div>
      <!-- `cpsortable` is renamed from `sortable` - see https://github.com/smartin015/continuousprint/issues/14 -->
      <div class="accordion queue-list" data-bind="cpsortable: {foreach: jobs, as: 'job', options: {handle: '.fa-grip-lines-vertical', onStart: $root.sortStart, onEnd: $root.sortEnd, onMove: $root.sortMove}}, css: {'loading': $root.loading(), 'local': name === 'local'}">
      <div class="accordion-group job" data-bind="css: {acquired: acquiredBy() !== undefined}">
          <!-- ko if: $parent.name === 'local' && acquiredBy() === undefined -->
          <div class="floatedit">
              <i style="cursor: pointer" class="far fa-check-square" data-bind="visible: draft, click: editEnd"></i>
              <i style="cursor: pointer" class="fas fa-edit" data-bind="hidden: draft() || acquiredBy(), click: editStart"></i>
          </div>
          <!-- /ko -->
          <div class="accordion-heading job-header">
            <div class="queue-row-container">
              <i class="fas fa-grip-lines-vertical"></i>
              <i style="cursor: pointer" data-bind="hidden: acquiredBy() && $root.active(), css: selected() ? 'fas fa-check-square' : 'far fa-square', click: onChecked"></i>
              <i data-bind="visible: acquiredBy(), attr: {title: 'Acquired by: ' + acquiredBy()}" class="fas fa-cube"></i>
              <!-- _vkenabled fixes dynamic form bug on virtual keyboard: https://github.com/xontab/chrome-virtual-keyboard/issues/5 -->
              <input class="job-name" type="text" data-bind="visible: draft, textInput: _name, attr: {'_vkenabled': false}"></input>
              <div class="job-name" data-bind="hidden: draft, text: _name"></div>
              <div class="progress" data-bind="css: { 'progress-striped active': $root.active() && queue.active_set() && acquiredBy() !== undefined }">
                <div data-bind="style: { width: pct_complete() }" class="bar bar-success"></div>
                <div data-bind="visible: $root.active() && queue.active_set() && acquiredBy() !== undefined, style: { width: pct_active() }" class="bar active"></div>
              </div>
              <div class="repeats">
                <span data-bind="hidden: draft, text: completed() + ' /'">/</span>
                <!-- _vkenabled fixes dynamic form bug on virtual keyboard: https://github.com/xontab/chrome-virtual-keyboard/issues/5 -->
                <input class="fa fa-text count-box" type="number" data-bind="visible: draft, value: count, attr: {'_vkenabled': false}"></input>
                <span data-bind="hidden: draft, text: count"></span>

              </div>
              <div class="total" data-bind="text: length_completed() + '/' + length()"></div>
            </div>
          </div>

          <div class="accordion-body collapse in">
            <div class="accordion-inner">
              <div id="queue_sets" data-bind="cpsortable: {foreach: sets, as: 'set', options: {handle: '.fa-grip-lines-vertical', onStart: $root.sortStart, onEnd: $root.sortEnd, onMove: $root.sortMove, group: 'sets'}}, css: {'empty': sets().length < 1, 'draft': job.draft}" class="sets accordion">
                <div class="accordion-group">
                  <div class="accordion-heading">
                    <div class="queue-row-container">
                        <i class="fas fa-grip-lines-vertical" data-bind="visible: job.draft"></i>
                        <p class="file-name" style="cursor:pointer" data-bind="click: $root.expand, style: { 'font-weight': queue.active_set() == id ? 'bold': null }">
                        <i class="fa" data-bind="css: expanded() ? 'fa-caret-down' : 'fa-caret-right'"></i>
                        <span class="materials" data-bind="visible: materials().length > 0, foreach: materials">
                        <span class="label" data-bind="attr: {title: title}, text: shortName, style: {'background-color': bgColor, 'color': color}"></span>
                          </span>
                          <span data-bind="text: shortName"/>
                        </p>
                        <div style="width: 150px; text-align: center;" data-bind="hidden: profile_matches" title="Set profile does not match this printer">
                          <i class="far fa-sticky-note"  style="margin-top: 3px; opacity: 0.5;"></i>
                        </div>
                        <div class="progress" data-bind="visible: profile_matches, css: { 'progress-striped active': $root.active() && queue.active_set() == id }">
                          <div data-bind="style: { width: pct_complete() }" class="bar bar-success"></div>
                          <div data-bind="visible: $root.active() && queue.active_set() == id, style: { width: pct_active() }" class="bar active"></div>
                        </div>
                        <div class="repeats">
                          <!-- _vkenabled fixes dynamic form bug on virtual keyboard: https://github.com/xontab/chrome-virtual-keyboard/issues/5 -->
                          <span data-bind="hidden: job.draft, text: completed() + ' /'"></span>
                          <input class="fa fa-text count-box" type="number" data-bind="visible: job.draft, value: count, attr: {'_vkenabled': false}"></input>
                          <span data-bind="hidden: job.draft, text: count"></span>
                        </div>
                        <div class="total" data-bind="text: length_completed() + '/' + length()"></div>
                      </div>
                      </div>
                  <div class="accordion-body collapse" data-bind="css: {'in': set.expanded}">
                    <div class="accordion-inner">
                      <div class="queue-set-list">
                        <div>Full path: <span data-bind="text: path"></span></div>
                        <div data-bind="visible: $root.materials().length > 0">
                          <div>Materials:</div>
                          <div class="material_select" data-bind="foreach: new Array($root.extruders() || 0)">
                            <div>
                              <span data-bind="text: '' + $index() + ':'"></span>
                              <select data-bind="value: (set.materials()[$index()] || {}).key, event: {change: (_, evt) => $root.setMaterial($parent, $index(), evt.target.value)}">
                                <option key=""></option>
                                <!-- ko foreach: $root.materials -->
                                  <option data-bind="value: value, text: text"></option>
                                <!-- /ko -->
                              </select>
                            </div>
                          </div>
                        </div>
                        <div>
                          <select data-bind="event: {change: addProfile}, visible: job.draft">
                              <option key=""></option>
                              <!-- ko foreach: $root.cpPrinterProfiles -->
                              <option data-bind="value: name, text: name"></option>
                              <!-- /ko -->
                          </select>
                          <span data-bind="visible: set.profiles().length > 0">Profiles:</span>
                          <span data-bind="foreach: set.profiles">
                            <span class="label label-info">
                              <span data-bind="text:$data"></span>
                              <i style="cursor: pointer", class="fas fa-times" data-bind="click: set.rmProfile, visible: job.draft"></i>

                            </span>
                          </span>
                        </div>
                        <div class="hint" data-bind="hidden: $root.materials().length > 0">
                          Hint: Install SpoolManager, add spools, then reload the page to select material types.
                        </div>
                        <button class="btn pull-right" data-bind="visible: job.draft, click: remove" title="delete set">
                          <i style="cursor: pointer" class="far fa-trash-alt"></i> Delete
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div><!-- tab foreach queues -->

    <div class="hint" data-bind="hidden: $root.queues().length > 1">
    Hint: Set up additional queues (including <a href="https://smartin015.github.io/continuousprint/lan-queues" target="_blank">LAN queues</a>) in the plugin settings.
    </div>
  </div> <!-- tab content -->
</div>
